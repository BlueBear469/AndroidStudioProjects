<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/cardview_private_toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="36dp">

            <RelativeLayout
                android:id="@+id/cardview_private_textlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cardview_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Name1"/>

                <TextView
                    android:id="@+id/cardview_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="6dp"
                    android:layout_below="@id/cardview_text1"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/cardview_imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_directions_bus_white_48dp"
                android:tint="@color/colorPrimary" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardview_private_bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@id/cardview_private_toplayout">

            <TextView
                android:id="@+id/cardview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Name"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
