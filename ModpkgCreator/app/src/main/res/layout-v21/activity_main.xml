<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yjprojects.modpkgcreator.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="24dp"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        android:elevation="24dp"
        android:scaleType="fitXY"
        android:id="@+id/arrowobj1"
        android:visibility="invisible"
        />

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:id="@+id/arrowobj2"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="20dp"
        android:background="@color/colorPrimaryLight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금, 시작해보세요."
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@+id/actionButton"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_forward_white_24dp"
            android:id="@+id/actionButton"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triangle Function - ModpkgCreator"
        android:layout_gravity="bottom|start"
        />

    <me.yugy.github.reveallayout.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reveal_layout"
        android:visibility="invisible"
        android:elevation="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/reveal_view"
            android:visibility="invisible"
            android:background="@color/colorAccent"
            />

    </me.yugy.github.reveallayout.RevealLayout>


</FrameLayout>