<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yjprojects.modpkggen.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="20dp"
        android:background="@color/colorPrimaryLight">

        <View
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/centerobj"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="28dp"
            android:layout_margin="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/centerobj"
            android:background="@drawable/circle"
            android:src="@drawable/ic_arrow_forward_white_24dp"
            android:scaleType="fitXY"
            android:id="@+id/actionButton1" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="28dp"
            android:layout_margin="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/centerobj"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_close_white_24dp"
            android:scaleType="fitXY"
            android:id="@+id/actionButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생성 완료 !"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/subTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음으로 원하는 작업을 선택하세요."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="25dp"
            android:layout_above="@id/actionButton1"
            android:id="@+id/subTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/actionButton1"
            android:gravity="center_horizontal"
            android:text="계속하기"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/actionButton1"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/actionButton2"
            android:gravity="center_horizontal"
            android:text="끝내기"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/actionButton2"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>